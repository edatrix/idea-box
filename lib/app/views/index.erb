<%= erb :form, locals: {idea: idea} %>

  <h3><font face="helvetica">Existing Ideas</font></h3>

<ul>
  <% ideas.each do |idea| %>
    <li>
      <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
        <input type='submit' value="+"/>
      </form>
      <font face="helvetica"><%= idea.title %></font><br/>
      <font face="helvetica"><%= idea.description %></font>
      <a href="/<%= idea.id %>/edit"><font face="helvetica">Edit</font></a>
      <form action='/<%= idea.id %>' method='POST'>
        <input type="hidden" name="_method" value="DELETE">
        <input type='submit' value="delete"/>
      </form>
    </li>
  <% end %>
</ul>
