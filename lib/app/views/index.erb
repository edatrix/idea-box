
<%= erb :form, locals: {idea: idea} %>

  <h1><font face="helvetica" font size="5">existing ideas:</font></h1>

  <br>
  <br>

<% ideas.each do |idea| %>
  <div class="3u idea">
    <section>
      <div class="mbox-style">
        <h2 class="title"><%= idea.title %></h2>

        <div class="content">
          <p class="subtitle"><%= idea.description[0..25] %>.. <br><a href="/<%= idea_path(idea) %>" class="read_more"><font face="helvetica" color="orange"> (read more &raquo;)</font></a></p>
        </div>

        <a href="/<%= idea_path(idea) %>/edit"><font face="helvetica" color="orange"> edit </font></a>

        <p class="button-style2">
          <form action='/<%= idea_path(idea) %>' method='POST'>
            <input type="hidden" name="_method" value="DELETE">
            <input type='submit' value="delete"/>
          </form>
        </p>
        
        <p class="button-style2">
          <form action='/<%= idea_path(idea) %>/like' method='POST' style="display: inline">
            <input type='submit' value="+"/>
          </form>
        </p>
      </div>
    </section>
  </div>
<% end %> 

