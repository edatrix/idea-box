<center>
  <br/>
  <p>
    <br/>
    <% if idea.id %>
      Edit your Idea:
    <% else %>
    <form action='/<%= idea_path %>' method='POST'>
      <font face="helvetica">Please enter your brilliant idea here:</font>
    <% end %>
  </p>
  <% if idea.id %>
  <form action='/<%= idea_path(idea) %>' method='POST'>
    <input type="hidden" name="_method" value="PUT" />
  <% end %>
  <input type='text' name='idea[title]' value="<%= idea.title %>"/><br/>
  <textarea name='idea[description]'><%= idea.description %></textarea><br/>
  <input type='submit'/>
  </form>
</center>
